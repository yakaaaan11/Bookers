<p id="notice"></p>
<h1>Books</h1>
<table>
    <thead>
    <!--thをグループ化するタグ-->
        <tr>
        <!--表の横軸を示す-->
            <th>Title</th> 
            <!--<th> table headerの略-->
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    
    <% @books.each do |book| %>
    <tbody>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            
        </tr>
    </tbody>
    <% end %>
</table>
<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>

 <h4>Title</h4></h4>
 <%= f.text_field:title %>

 <h4>Body</h4>
 <%= f.text_field:body %>

 <%= f.submit "Create Book" %>
 
<% end %>