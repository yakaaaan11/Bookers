<h1>Books</h1>
<table>
    <thead>
    <!--thをグループ化するタグ-->
        <tr>
        <!--表の横軸を示す-->
            <th>Title</th> 
            <!--<th> table headerの略-->
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    
    <% @books.each do |book| %>
    <tbody>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td>
                <%= link_to "Show",book_path(book.id) %>
            </td>
            <td>
                <%= link_to "Edit",edit_book_path(book.id) %>
            </td>
            <td>
                <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %>
            </td>
        </tr>
    </tbody>    
    <% end %>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
<div id="error_explanation">
    <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<%= form_with model:@book,local:true do |f| %>

　  <div class="field">
　      <label>Title</label>
　      <%= f.text_field:title %>
　  </div>

　  <div class="field">
　      <label>Body</label>
　      <%= f.text_area:body %>
　  </div>
　
    <%= f.submit "Create Book" %>
 
<% end %>